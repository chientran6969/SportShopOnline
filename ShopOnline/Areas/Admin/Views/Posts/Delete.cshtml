@model ShopOnline.Models.Post

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Bài viết</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="/Admin" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Admin</a>
            <a class="breadcrumb-item" href="/Admin/Posts">Quản lý bài viết</a>
            <span class="breadcrumb-item active">Chi tiết bài viết</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="container">
            <h1 class="font-weight-normal m-b-10"><b>@Model.Title</b></h1>
            <div class="d-flex m-b-30">
                <div class="avatar avatar-cyan avatar-img">
                    <img src="~/Adminassets/images/avatars/thumb-6.jpg" alt="">
                </div>
                <div class="m-l-15">
                    <p href="javascript:void(0);" class="text-dark m-b-0 font-weight-semibold">@Model.Account.FullName</p>
                    <p class="m-b-0 text-muted font-size-13">@Model.CreateAt</p>
                </div>
            </div>
            <div class="text-center">
                <img alt="" class="img-fluid w-80 h-auto " style="max-height: 500px;" src="~/images/posts/@Model.Thumb">
            </div>
            <div class="m-t-30 h5">
                @Html.Raw(Model.Context)
            </div>
            <div class="d-flex">

            </div>
            <div class="d-flex m-t-40 align-items-center">
                <span class="m-r-15">Share this post: </span>
                <ul class="list-inline m-b-0">
                    <li class="list-inline-item">
                        <button class="font-size-16 btn btn-hover btn-icon btn-rounded">
                            <i class="anticon anticon-facebook"></i>
                        </button>
                    </li>
                    <li class="list-inline-item">
                        <button class="font-size-16 btn btn-hover btn-icon btn-rounded">
                            <i class="anticon anticon-twitter"></i>
                        </button>
                    </li>
                    <li class="list-inline-item">
                        <button class="font-size-16 btn btn-hover btn-icon btn-rounded">
                            <i class="anticon anticon-instagram"></i>
                        </button>
                    </li>
                </ul>
            </div>
            @*<div class="text-right">
                <a asp-action="Index" class="btn btn-primary">
                    <i class="anticon anticon-backward m-r-5"></i>Back to List
                </a>
                <a asp-action="Edit" asp-route-id="@Model.PostId" class="btn btn-primary">
                    <i class="anticon anticon-edit m-r-5"></i>Edit
                </a>

            </div>*@
            <form asp-action="Delete" class="text-right">
                <input type="hidden" asp-for="PostId" />
                <a asp-action="Index" class="btn btn-primary">
                    <i class="anticon anticon-backward m-r-5"></i>Trở về
                </a>
                
                <button type="submit" class="btn btn-danger">
                    <i class="anticon anticon-edit m-r-5"></i>Xóa
                </button>
            </form>
            <hr>

        </div>
    </div>
</div>

