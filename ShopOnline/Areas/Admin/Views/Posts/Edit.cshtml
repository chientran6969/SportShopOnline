@model ShopOnline.Models.Post

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">


<div class="page-header">
    <h2 class="header-title">Sửa bài viết</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="/Admin" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Admin</a>
            <a class="breadcrumb-item" href="/Admin/Posts">Quản lý bài viết</a>
            <span class="breadcrumb-item active">Sửa bài viết</span>
        </nav>
    </div>
</div>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <input hidden asp-for="PostId" />
                <input hidden asp-for="Thumb" />
                <input hidden asp-for="AccountId" />
                <input hidden asp-for="CreateAt" />
                
                <div class="form-group col-12 col-lg-6">
                    <label class="control-label">Tiêu đề:</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-lg-6">
                    <label class="control-label">Trạng thái:</label>
                    <div class="switch mt-2">
                        <input asp-for="Active" type="checkbox" id="switch-1" checked="checked">
                        <label for="switch-1"></label>
                    </div>
                </div>
                <div class="form-group col-12">
                    <div class="form-group">
                        <label class="control-label">Hình Ảnh:</label>
                        <input type="file" class="form-control" name="fThumb" />
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-12">
                    <div class="form-group">
                        <label class="control-label">Nội dung:</label>
                        <textarea rows="5" asp-for="Context" class="form-control" id="summernote">@Html.Raw(Model.Context)</textarea>

                    </div>
                    <span asp-validation-for="Context" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>
    <div class="card-footer">
        <div class="m-b-15 mt-2 text-right">
            <a asp-action="Index" class="btn btn-primary text-light">
                <i class="anticon anticon-backward m-r-5"></i>
                <span>Trở về</span>
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="anticon anticon-save m-r-5"></i>
                <span>Lưu</span>
            </button>
        </div>
    </div>
</form>

