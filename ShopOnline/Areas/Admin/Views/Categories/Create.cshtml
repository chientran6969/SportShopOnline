@model ShopOnline.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Thêm Danh mục</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="/Admin" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Admin</a>
            <span class="breadcrumb-item active">Quản lý danh mục</span>
        </nav>
    </div>
</div>
<form asp-action="Create" method="post">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-12 col-lg-6">
                    <label class="control-label">Tên danh mục:</label>
                    <input asp-for="CatName" class="form-control" />
                    <span asp-validation-for="CatName" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-lg-6">
                    <label class="control-label">Trạng thái:</label>
                    <div class="switch mt-2">
                        <input asp-for="Active" type="checkbox" id="switch-1" checked="checked">
                        <label for="switch-1"></label>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        </div>
        <div class="card-footer">
            <div class="m-b-15 mt-2 text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="anticon anticon-plus"></i>
                    <span>Thêm</span>
                </button>
            </div>
        </div>
    </div>
</form>

