    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <input hidden asp-for="ProductId" />
                        <input hidden asp-for="Thumb" />
                        <div class="form-group col-12 col-lg-6">
                            <label for="formGroupExampleInput">Tên sản phẩm:</label>
                            <input asp-for="ProductName" type="text" class="form-control" id="formGroupExampleInput"
                                   placeholder="Tên sản phẩm">
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12 col-lg-6">
                            <label for="formGroupExampleInput">Giá:</label>
                            <input asp-for="Price" type="number" class="form-control" id="formGroupExampleInput"
                                   placeholder="Giá">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12 col-lg-6">
                            <label for="exampleFormControlSelect1">Danh mục</label>
                            <select class="select2 w-100" name="CatId" asp-items="ViewBag.Categories" multiple="multiple">
                            </select>
                            @*<select asp-for="CatId" id="catID" name="catID" asp-items="ViewBag.Categories" class="form-control select2" multiple="multiple">
                                </select>*@
                        </div>
                        <div class="form-group col-12 col-lg-6">
                            <label for="formGroupExampleInput3">Khuyến mãi(%):</label>
                            <input asp-for="Discount" type="number" class="form-control" id="formGroupExampleInput"
                                   placeholder="Khuyến mãi">
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12 col-lg-6">
                            <label for="formGroupExampleInput3">Ảnh:</label>
                            <input type="file" name="fthumb" class="form-control" id="formGroupExampleInput3"
                                   placeholder="Khuyến mãi">
                            <span asp-validation-for="Thumb" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12 col-lg-6">
                            <label class="control-label">Kích hoạt:</label>
                            <div class="switch mt-2">
                                <input asp-for="Active" type="checkbox" id="switch-1" checked="checked">
                                <label for="switch-1"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-12 col-lg-6">
                            <label for="formGroupExampleInput">Nhãn hiệu</label>
                            <input asp-for="Brand" type="text" class="form-control" id="formGroupExampleInput"
                                   placeholder="Nhãn hiệu">
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12 col-lg-6">
                            <label for="formGroupExampleInput">Màu sắc</label>
                            <input asp-for="Color" type="text" class="form-control" id="formGroupExampleInput"
                                   placeholder="Màu sắc">
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12 col-lg-6">
                            <label for="formGroupExampleInput">Size S</label>
                            <input asp-for="SizeS" type="number" class="form-control" id="formGroupExampleInput"
                                   placeholder="Số lượng">
                            <span asp-validation-for="SizeS" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12 col-lg-6">
                            <label for="formGroupExampleInput">Size M</label>
                            <input asp-for="SizeM" type="number" class="form-control" id="formGroupExampleInput"
                                   placeholder="Số lượng">
                            <span asp-validation-for="SizeM" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12 col-lg-6">
                            <label for="formGroupExampleInput">Size L</label>
                            <input asp-for="SizeL" type="number" class="form-control" id="formGroupExampleInput"
                                   placeholder="Số lượng">
                            <span asp-validation-for="SizeL" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12 col-lg-6">
                            <label for="formGroupExampleInput">Size XL</label>
                            <input asp-for="SizeXl" type="number" class="form-control" id="formGroupExampleInput"
                                   placeholder="Số lượng">
                            <span asp-validation-for="SizeXl" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="card">
                <div class="card-body">
                    <textarea rows="5" asp-for="Description" class="form-control" id="summernote"></textarea>
                </div>
            </div>
        </div>
    </div>
</form>

